    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Arquivo Atual",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Rodar Doctest",
            "type": "python",
            "request": "launch",
            "module": "doctest",
            "args": ["${file}", "-v"],
            "cwd": "${workspaceRoot}",
            "justMyCode": true
          }
    ]
}